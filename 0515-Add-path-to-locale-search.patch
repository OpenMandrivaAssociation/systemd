+static int add_locales_from_sharedir(Set *locales) {
+	_cleanup_closedir_ DIR *dir = NULL;
+	int r;
+
+	dir = opendir("/usr/share/locale");
+	if (!dir)
+		return errno == ENOENT ? 0 : -errno;
+
+	FOREACH_DIRENT(de, dir, return -errno) {
+		char *z;
+
