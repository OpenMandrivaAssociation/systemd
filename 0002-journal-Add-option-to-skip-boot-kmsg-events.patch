diff -up systemd-stable-256/src/journal/journald-kmsg.c.14~ systemd-stable-256/src/journal/journald-kmsg.c
--- systemd-stable-256/src/journal/journald-kmsg.c.14~	2024-06-11 23:42:06.000000000 +0200
+++ systemd-stable-256/src/journal/journald-kmsg.c	2024-06-12 14:10:48.675603387 +0200
@@ -400,6 +400,17 @@ int server_open_dev_kmsg(Server *s) {
         if (!s->read_kmsg)
                 return 0;
 
+        if (!s->boot_kmsg) {
+                /* clear out /dev/kmsg, we don't want all its messages */
+                char buffer[40960];
+                while (1) {
+                        int ret;
+                        ret = read(s->dev_kmsg_fd, buffer, 40960);
+                        if (ret <= 0)
+                                break;
+                }
+        }
+
         r = sd_event_add_io(s->event, &s->dev_kmsg_event_source, s->dev_kmsg_fd, EPOLLIN, dispatch_dev_kmsg, s);
         if (r == -EPERM) { /* This will fail with EPERM on older kernels where /dev/kmsg is not readable. */
                 r = 0;
